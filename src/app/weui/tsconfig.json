{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "stripInternal": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": false,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "../../../dist/angular4-weui",
    "paths": {
      "rxjs/*": [
        "../../../node_modules/rxjs/*"
      ],
      "@angular/*": [
        "../../../node_modules/@angular/*"
      ]
    },
    "rootDir": ".",
    "sourceMap": true,
    "inlineSources": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "lib": ["es2015", "dom"],
    "typeRoots": [
      "../../../node_modules/@types/"
    ]
  },
  "files": [
    "index.ts",
    "../../../node_modules/zone.js/dist/zone.js.d.ts"
  ],
  "angularCompilerOptions": {
    "skipMetadataEmit": true,
    "skipTemplateCodegen": true
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
