  "version": "0.2.0",
  "configurations": [{
      "type": "node",
      "request": "launch",
      "name": "启动程序",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/node_modules/.bin/ng",
      "args": [
        "serve"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "打包程序",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/node_modules/.bin/ng",
      "args": [
        "build", "-prod", "--aot"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "检测语法",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/node_modules/.bin/ng",
      "args": [
        "lint"
      ]
    }
  ]
}
